<Window x:Class="WpfApplication1.Anleitung"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        WindowStartupLocation="CenterScreen"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d" Background="White"
        Title="Anleitung" Height="404" Width="430" KeyDown="Window_KeyDown" ResizeMode="NoResize" 
        WindowStyle="ToolWindow" >
    <Grid>
        <TabControl  x:Name="tabControl2" Height="366" Background="Wheat" VerticalAlignment="Top" SelectedIndex="0">
            <TabItem Header="Modus: Uhrzeit" x:Name="tabItem21">
                <ScrollViewer x:Name="SV1">
                    <TextBlock x:Name="TBUhrzeit" TextWrapping="Wrap" Padding="5" FontSize="13"/>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="Modus: Faktor" x:Name="tabItem22">
                <ScrollViewer x:Name="SV2">
                    <TextBlock x:Name="TBFaktor" TextWrapping="Wrap" Padding="5" FontSize="13"/>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
